# Development Dockerfile for Vite + React
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY tsconfig*.json ./
COPY vite.config.ts ./
COPY tailwind.config.ts ./
COPY postcss.config.js ./
COPY eslint.config.js ./
COPY index.html ./

# Install dependencies
RUN npm install

# Copy source code (will be overridden by volume mount in docker-compose)
COPY src ./src
COPY public ./public

# Expose Vite port
EXPOSE 5173

# Run Vite dev server
CMD ["npm", "run", "dev"]
